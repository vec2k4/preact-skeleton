{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "noEmitOnError": true,
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": [ "es2015", "dom", "scripthost", "es5" ],
    "importHelpers": true
  },
  "include": [
    "./project/src/**/*.tsx",
    "./project/src/**/*.ts",
    "./project/typings/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}